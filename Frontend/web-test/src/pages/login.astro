---
import Layout from "../layouts/Layout.astro"
import NavBar from '../components/NavBar.astro';
---
<Layout title="Area de cliente - FiCheck">
  <NavBar />
  <div class="min-h-[90%] flex items-center justify-center">
    <div class="w-full max-w-2xl grid grid-cols-1 md:grid-cols-2 gap-6 p-4">
      <!-- Sección de Login -->
      <div class="border p-4 rounded">
        <h2 class="text-lg font-semibold mb-2">Login</h2>
        <form id="login-form" action="./admin/dashboard" method="get" class="space-y-3">
          <div>
            <label for="login-username" class="block">Username</label>
            <input type="text" id="login-username" name="username" class="w-full border p-1 rounded" />
          </div>
          <div>
            <label for="login-password" class="block">Password</label>
            <input type="password" id="login-password" name="password" class="w-full border p-1 rounded" />
          </div>
          <button type="submit" id="login-button" class="w-full border p-2 rounded mt-2 bg-gray-300 cursor-not-allowed" disabled>Login</button>
        </form>
      </div>

      <!-- Sección de Registro -->
      <div class="border p-4 rounded">
        <h2 class="text-lg font-semibold mb-2">Registro</h2>
        <form action="/register" method="post" class="space-y-3">
          <div>
            <label for="register-username" class="block">Username</label>
            <input type="text" id="register-username" name="username" class="w-full border p-1 rounded" />
          </div>
          <div>
            <label for="register-email" class="block">Email</label>
            <input type="email" id="register-email" name="email" class="w-full border p-1 rounded" />
          </div>
          <div>
            <label for="register-password" class="block">Password</label>
            <input type="password" id="register-password" name="password" class="w-full border p-1 rounded" />
          </div>
          <button type="submit" class="w-full border p-2 rounded mt-2">Registro</button>
        </form>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const usernameInput = document.getElementById("login-username");
      const passwordInput = document.getElementById("login-password");
      const loginButton = document.getElementById("login-button");
      
      function validateLogin() {
        const username = usernameInput.value;
        const password = passwordInput.value;
        const hasLetter = /[a-zA-Z]/.test(username) || /[a-zA-Z]/.test(password);
        const hasNumber = /\d/.test(username) || /\d/.test(password);
        
        if (hasLetter && hasNumber) {
          loginButton.disabled = false;
          loginButton.classList.remove("bg-gray-300", "cursor-not-allowed");
          loginButton.classList.add("bg-blue-500", "text-white", "cursor-pointer");
        } else {
          loginButton.disabled = true;
          loginButton.classList.add("bg-gray-300", "cursor-not-allowed");
          loginButton.classList.remove("bg-blue-500", "text-white", "cursor-pointer");
        }
      }
      
      usernameInput.addEventListener("input", validateLogin);
      passwordInput.addEventListener("input", validateLogin);
    });
  </script>
</Layout>
